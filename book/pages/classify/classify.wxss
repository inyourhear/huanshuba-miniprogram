/* book/pages/classify/classify.wxss */
@import "../../template/book/book.wxss";
@import "../../template/top/top.wxss";

.top{
  box-shadow: none;
}
.container{
  margin-top: 120px;
}
.classify{
  display: flex;
  flex-direction: row;
}
.classify-item{
  position: fixed;
  display: flex;
  flex-direction: row;
  top: 50px;
  height: 50px;
  width: 100%;
  text-align: center;
  z-index: 1;
  background-color: #f8f8f8;
  box-shadow: 0 0 16rpx #999;
}
.classify-item > button{
  display: flex;
  align-items: center;
  justify-content: center;
  width: 33%;
  height: 45px;
}
.select{
  background-color: rgba(13, 100, 191, 0.5);
}
