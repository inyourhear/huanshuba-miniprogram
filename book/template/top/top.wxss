/* book/pages/templates/top.wxss */
.top{
  display: flex;
  flex-direction: row;
  justify-content: center;
  align-items: center;
  width: 100%;
  height: 50px;
  position: fixed;
  top: 0;
  z-index: 2;
  background-color: #f8f8f8;
  box-shadow: 0 0 16rpx #999;
}
.search{
  width: 90%;
  display: flex;
  flex-direction: row;
  border: solid 1px;
  border-radius: 10px;
}
.search > text{
  width: 45%;
  height: 35px;
  text-align: center;
  font-size: xx-large;
  font-weight: 700;
}
.search > input{
  flex: 1;
  width: 40%;
  height: 30px;
}
.search > image{
  width: 10%;
  height: 30px;
  align-self: center;
}